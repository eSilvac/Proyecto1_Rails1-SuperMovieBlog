<!DOCTYPE html>
<html>
  <head>
    <title>SuperMovieBlog</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
  </head>

  <body>
  	<nav class="navbar navbar-default">
  	  <div class="container-fluid">
  	    <div class="navbar-header">
          <%= link_to "SuperMovieBlog", posts_path ,class:"navbar-brand"%>
  	    </div>
  	    <ul class="nav navbar-nav navbar-right">
  	    	<% if user_signed_in? %>
  	      	<li><%= link_to (fa_icon "plus", text: "Nuevo"), new_post_path %></li>
  	      	<li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#"> <%= current_user.username %> <span class="caret"></span></a>
  	        	<ul class="dropdown-menu">
  	        		<li><a href="#">Publicaciones</a></li>
  	        		<li><%= link_to "Salir", destroy_user_session_path, :method => :delete %></li>
  	        	</ul>
  	      	</li>
  	      <% else %>
  	      	<li><%= link_to "Iniciar Sesion", new_user_session_path %></li>
  	      	<li><%= link_to "Crear Usuario",  new_user_registration_path %></li>
  	      <% end %>
  	    </ul>
  	  </div>
  	</nav>	
    <div class="full">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
