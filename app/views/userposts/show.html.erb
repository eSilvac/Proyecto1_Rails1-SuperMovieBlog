<div class="container" id="showuserpost">
	<div class="row">
		<% @posts.each do |post| %>
			
			<div class="col-xs-10 col-xs-offset-1" id="interior">
				<%= link_to post do %>
					<div class="col-xs-6">
						<h3 class="text-left"><%= post.title %></h3>
					</div>
					<div class="col-xs-4">
						<h4 class="text-right">Comentarios: <%= post.comments.count %></h4>
					</div>
				<% end %>
				<div class="col-xs-2">
					<div class="text-right" id="buttons">
						<%= link_to (fa_icon "pencil"),edit_post_path(post) , class:"edit" %>
						<%= link_to (fa_icon "trash-o"), post, :method => :delete, class:"delete", data: {confirm: "Â¿Estas Seguro que Deseas Eliminar el Post?"} %>
					</div>					
				</div>
			</div>
		<% end %>
	</div>
</div>

