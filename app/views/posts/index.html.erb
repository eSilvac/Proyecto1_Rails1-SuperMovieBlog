<div class="container-fluid">
	<div class="row">
		<div class="col-xs-7 col-xs-offset-1">
		</div>

		<div class="col-xs-2 col-xs-offset-1" id="hola">
			<h2>hola2</h2>
		</div>
	</div>	

	<div class="row">
		<% @posts.each do |post| %>
			<div class="col-xs-7 col-xs-offset-1" id="post">
				<% movie = Imdb::Movie.new(post.imdb_url) %>
				<div class="col-xs-2" id="imagen">
					<%= link_to image_tag(OMDB.id("tt" + post.imdb_url).poster , width: '90%'), post, class:"poster" %>
				</div>
				<div class="col-xs-8" id="body">
					
					<h2><%= link_to post.title, post, class:"title" %></h2>
					<p><%= post.description %></p>

				</div>
				<div class="col-xs-2" id="rat-but">
					<h2 class="text-right"><%= movie.rating %></h2>
					<% if current_user == post.user %>
						<div class="userButton">
							<%= link_to (fa_icon "pencil"),edit_post_path(post) , class:"editdelete" %>
							<%= link_to (fa_icon "trash-o"), post, :method => :delete, class:"editdelete" %>
						</div>
					<% end %>	
				</div>					
			</div>
		<% end %>
	</div>
</div>